[module/lock]
type = custom/text
content = "%{F#e39e54}Ó¢ô %{F#e8d174}Lock"
click-left = "pkill -n polybar ; sh ~/.config/i3/Lock.sh"
[module/suspend]
type = custom/text
content = "%{F#e39e54}Óóõ %{F#e8d174}Suspend"
click-left = "pkill -n polybar ; sh ~/.config/i3/Lock.sh && systemctl suspend"
[module/logout]
type = custom/text
content = "%{F#e39e54}ÓóÑ %{F#e8d174}Logout"
click-left = "pkill -n polybar ; i3-msg exit"
[module/reboot]
type = custom/text
content = "%{F#e39e54}Óóï %{F#e8d174}Reboot"
click-left = "pkill -n polybar ; systemctl reboot"
[module/poweroff]
type = custom/text
content = "%{F#e39e54}Ó¢¨ %{F#e8d174}Poweroff"
click-left = "pkill -n polybar ; systemctl poweroff"
[module/closepowermenubar]
type = custom/text
content = "%{F#e39e54}Óóç %{F#e8d174}Cancel"
